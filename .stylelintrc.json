{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-order",
        "prettier"
    ],
    "rules": {
        "declaration-colon-space-after": "always-single-line"
    },
    "ignoreFiles": [
        "dist/*",
        "node_modules/*",
        ".parcel-cache/*",
        "package.json",
        "package-lock.json",
        "tsconfig.json"
    ]
}
