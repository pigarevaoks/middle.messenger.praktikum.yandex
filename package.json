{
    "name": "chat",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "dev": "./node_modules/.bin/parcel src/layouts/*.html --port 3001",
        "clear": "rm -rf ./dist ./.cache",
        "build": "npm run clear && ./node_modules/.bin/parcel build src/layouts/*  --no-scope-hoist",
        "start": "npm run clear && ./node_modules/.bin/parcel build src/layouts/*  --no-scope-hoist  && node server.js",
        "lint:css": "stylelint \"**/*.less\" --fix",
        "lint:js": "eslint . --fix --ext .js,.ts",
        "lint": "npm run lint:css && npm run lint:js",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.js' --write"
    },
    "keywords": [],
    "author": "klimova oksana",
    "license": "ISC",
    "devDependencies": {
        "@parcel/transformer-less": "2.0.0-beta.2",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "4.28.2",
        "@typescript-eslint/parser": "4.28.2",
        "eslint": "7.30.0",
        "eslint-config-airbnb-base": "14.2.1",
        "express": "4.17.1",
        "husky": "7.0.1",
        "parcel": "2.0.0-beta.2",
        "parcel-bundler": "1.12.5",
        "parcel-plugin-handlebars-precompile": "^1.0.2",
        "prettier": "2.3.2",
        "stylelint": "13.13.1",
        "stylelint-config-standard": "22.0.0",
        "typescript": "4.3.5"
    },
    "dependencies": {
        "handlebars": "4.7.7",
        "uuid": "8.3.2"
    },
    "lint-staged": {
        "*.(js)": "prettier --config .prettierrc 'src/**/*.js' --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "alias": {
        "common": "./src/common",
        "components": "./src/components",
        "layouts": "./src/layouts",
        "modules": "./src/modules",
        "pages": "./src/pages",
        "styles": "./src/styles",
        "utils": "./src/utils"
    }
}
