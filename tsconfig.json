{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es5", "scripthost", "es2015.proxy"],
        "baseUrl": "./src",
        "paths": {
            "api/*": ["api/*"],
            "controllers/*": ["controllers/*"],
            "common/*": ["common/*"],
            "components/*": ["components/*"],
            "templates/*": ["templates/*"],
            "utils/*": ["utils/*"],
            "modules/*": ["modules/*"],
            "layouts/*": ["layouts/*"],
            "pages/*": ["pages/*"],
            "styles/*": ["styles/*"],
            "stores/*": ["stores/*"]
        }
    }
}
