{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2015",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitThis": false
    },
    "exclude": [
        "node_modules/**/*"
    ]
}
